<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.anxin.changbaishan.view.account.AccountActivity">

    <include
        layout="@layout/layout_title_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>

    <RelativeLayout
        android:id="@+id/rl_water_count"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/order_4"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="剩余箱数"
            android:textColor="#333333"
            android:id="@+id/textView21"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/right_arrow"
            android:id="@+id/imageView4"/>

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_water_count"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21"/>

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/black_999"
            android:text="预约送水"
            android:id="@+id/textView23"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>

    <RelativeLayout
        android:id="@+id/rl_points"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/order_3"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="积分"
            android:textColor="#333333"
            android:id="@+id/textView26"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/right_arrow"
            android:id="@+id/imageView6"/>

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_points"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView26"
            android:layout_toEndOf="@+id/textView26"/>

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/black_999"
            android:text="查看明细"
            android:id="@+id/textView27"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView6"
            android:layout_toStartOf="@+id/imageView6"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>

    <RelativeLayout
        android:id="@+id/rl_cup_count"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/order_5"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="剩余桶数"
            android:textColor="#333333"
            android:id="@+id/textView29"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/right_arrow"
            android:id="@+id/imageView7"/>

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_cup_count"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView29"
            android:layout_toEndOf="@+id/textView29"/>

        <TextView
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/black_999"
            android:text="兑换积分"
            android:id="@+id/textView30"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView7"
            android:layout_toStartOf="@+id/imageView7"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>

</LinearLayout>
