<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/record_icon"
        android:id="@+id/iv_icon"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_time"
        android:layout_toStartOf="@+id/tv_time"
        android:layout_alignBottom="@+id/view9"/>

    <TextView
        style="@style/CustomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentTop="true"/>

    <TextView
        style="@style/CustomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@+id/tv_message"
        android:layout_alignLeft="@+id/tv_message"
        android:layout_alignStart="@+id/tv_message"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"
        android:layout_below="@+id/tv_time"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time"
        android:id="@+id/view9"/>
</RelativeLayout>
