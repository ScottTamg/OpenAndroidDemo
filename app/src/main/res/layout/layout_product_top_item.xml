<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/view"
        android:background="@color/divider_gray"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="id"
        android:textSize="12sp"
        android:textColor="@color/default_red"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:lines="2"
        android:textSize="12sp"
        android:text="title"
        android:textColor="@color/black_333"
        android:layout_below="@+id/tv_id"
        android:layout_toLeftOf="@+id/textView18"
        android:layout_toStartOf="@+id/textView18"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:textColor="#A4A4A4"
        android:visibility="gone"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"/>

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:src="@drawable/home_selected"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"/>

    <ImageView
        android:id="@+id/img_out_of_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/outofstock"
        android:visibility="gone"
        android:layout_alignTop="@+id/img_icon"
        android:layout_alignLeft="@+id/img_icon"
        android:layout_alignStart="@+id/img_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规格："
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_999"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_standard"
        android:layout_alignTop="@+id/img_icon"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_toEndOf="@+id/img_icon"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥：900元"
        android:layout_marginTop="5dp"
        android:textColor="@color/default_red"
        android:layout_below="@+id/tv_standard"
        android:layout_alignLeft="@+id/tv_standard"
        android:layout_alignStart="@+id/tv_standard"/>

    <Button
        android:id="@+id/img_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/red_round"
        android:text="购买"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignBottom="@+id/img_icon"/>

    <View
        android:id="@+id/tv_order_amount"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"
        android:layout_alignTop="@+id/view4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_gray"
        android:layout_below="@+id/img_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/CustomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="限新用户"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle_yellow_bg"
        android:id="@+id/textView18"
        android:layout_alignTop="@+id/tv_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
