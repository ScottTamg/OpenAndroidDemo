<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/activity_horizontal_margin">

    <RadioButton
        style="@style/CustomCheckBok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black_333"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:id="@+id/rb_default"/>

    <ImageView
        style="@style/CustomTextStyle"
        android:id="@+id/tv_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/edit"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black_333"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_edit"
        android:layout_toStartOf="@+id/tv_edit"
        android:id="@+id/view3"/>

    <TextView
        style="@style/CustomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignTop="@+id/rb_default"
        android:layout_toRightOf="@+id/rb_default"
        android:layout_toEndOf="@+id/rb_default"/>

    <TextView
        style="@style/CustomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:id="@+id/tv_phone"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_alignTop="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_name"/>

    <TextView
        style="@style/CustomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/tv_address"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"/>


</RelativeLayout>
